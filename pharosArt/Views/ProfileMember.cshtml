@using pharosArt.Controllers
@using pharosArt.Models
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}

@section scripts{
    @*<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.1.min.js"></script>*@
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/5.1/jquery.validate.unobtrusive.min.js"></script>
    <script src="/scripts/magnific-popup.js"></script>
    
    <script>
        $(document).ready(function () {
            $(".fancy-box-image").colorbox({
                rel: 'fancy-box-image',
                scalePhotos: true,
                maxWidth: "90%"
            });
            $(document).bind('cbox_complete', function () {
                var item = $.colorbox.element()[0].id;
            });
        });
       
    </script>
}
@section header
{
   <link rel="stylesheet" href="/css/popup.css">
}
@if (Umbraco.MemberIsLoggedOn())
{
    @Html.Action("GetProfile", "Profile", new { username = Members.CurrentUserName })
}
else
{
    @Html.Action("RenderLogin", "Login")
}
