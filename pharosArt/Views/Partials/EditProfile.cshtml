@model pharosArt.Models.EditModel

<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.1.min.js"></script>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.min.js"></script>
<script src="http://ajax.aspnetcdn.com/ajax/mvc/5.1/jquery.validate.unobtrusive.min.js"></script>
<style>
    td, th {
        padding: 9px;
    }
</style>
@using (Html.BeginUmbracoForm("SaveProfile", "Profile", FormMethod.Post))
{
    <div>
        @Html.Hidden("memberId", Model.MemberId)

        @Html.AntiForgeryToken()
    <div class="row">
        @Html.LabelFor(m => m.FirstName)
        @Html.TextBoxFor(m => m.FirstName, new {@class="editInput"})
    </div>
    <div class="row">
        @Html.LabelFor(m => m.LastName)
        @Html.TextBoxFor(m => m.LastName, new { @class="editInput"})
    </div>
    <div class="row">
        @Html.LabelFor(m => m.Biography)
        @Html.TextAreaFor(m => m.Biography, new {@class= "editInput"})
    </div>
        @Html.ValidationSummary()
        <button class="button" ontouchend="this.onclick=hoverFix" name="edit" type="submit" style="padding:4px;margin:auto;font-weight:600;margin-top:3em;"><span>Save </span></button>
    </div>
}
   