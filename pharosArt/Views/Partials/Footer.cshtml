@using pharosArt.Controllers
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
<style>
    .foot {
        text-align: center;
        font-family: "Open Sans";
        font-size: 14px;
        font-style: normal;
        font-weight: 400;
        letter-spacing: 0px;
        line-height: 1.8em;
    }

    #socialmedia_accounts {
        margin: 0 auto;
    }

    #socialmedia_footer {
        display: flex;
        text-align: center;
        margin: 0;
        padding: 0;
        list-style: none;
        opacity: 1;
        align-items: center;
        justify-content: center;
    }

        #socialmedia_footer:hover .socialmedia_item .socialmedia_link {
            opacity: .2;
            transition: opacity .3s;
        }

        #socialmedia_footer .socialmedia_item .socialmedia_link:hover {
            opacity: 1;
            transition: opacity .3s;
        }

    .socialmedia_item {
        width: 40px;
    }
</style>
@{
    var twitter_icon = Umbraco.Media(7986);
    var facebook_icon = Umbraco.Media(7984);
    var instagram_icon = Umbraco.Media(7985);
    var home = AppHelper.GetHomeNode();
}
<div class="socialmedia_accounts" align="center">
    <ul id="socialmedia_footer">
        @if (home.HasValue("twitterUrl"))
        {
            <li class="socialmedia_item">
                <a href="@home.TwitterUrl" target="_blank" class="socialmedia_link">
                    <img src="@twitter_icon.Url" height="30" width="30" />
                </a>
            </li>
        }
        @if (home.HasValue("facebookUrl"))
        {
            <li class="socialmedia_item">
                <a href="@home.FacebookUrl" target="_blank" class="socialmedia_link">
                    <img src="@facebook_icon.Url" height="30" width="30" />
                </a>
            </li>
        }
        @if (home.HasValue("instagramUrl"))
        {
            <li class="socialmedia_item">
                <a href="@home.InstagramUrl" target="_blank" class="socialmedia_link">
                    <img src="@instagram_icon.Url" height="30" width="30" />
                </a>
            </li>
        }
    </ul>
</div>
