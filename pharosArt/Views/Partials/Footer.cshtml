@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
<style>
    .foot{
        text-align: center;
        font-family: "Open Sans";
        font-size: 14px;
        font-style: normal;
        font-weight: 400;
        letter-spacing: 0px;
        line-height: 1.8em;
    }
    
    #socialmedia_accounts{
        margin: 0 auto;
    }
    
    #socialmedia_footer {
	display: flex;
	text-align: center;
	margin: 0;
	padding: 0;
	list-style: none;
	opacity: 1;
	align-items: center;
    justify-content: center;
    }
    
    #socialmedia_footer:hover .socialmedia_item .socialmedia_link{
    	opacity: .2;
    	transition: opacity .3s;
    }
    #socialmedia_footer .socialmedia_item .socialmedia_link:hover {
    	opacity: 1;
    	transition: opacity .3s;
    }
    
    .socialmedia_item{
        width: 40px;
    }
</style>

@{
    var twitter_icon = Umbraco.Media(7986);
    var facebook_icon = Umbraco.Media(7984);
    var instagram_icon = Umbraco.Media(7985);
}

<div class="socialmedia_accounts" align="center"> 
    <ul id="socialmedia_footer">
        <li class="socialmedia_item">
        <a href="https://twitter.com/pharoslondon" target="_blank" class="socialmedia_link">
        <img  src="@twitter_icon.Url" height="30" width="30" />
        </a>
        </li>
        <li class="socialmedia_item">
        <a href="https://www.facebook.com/Pharos-377810605733832/timeline/" target="_blank" class="socialmedia_link">
        <img src="@facebook_icon.Url" height="30" width="30"/>
        </a> 
        </li>
        <li class="socialmedia_item">
        <a href="https://www.instagram.com/pharoslondon/" target="_blank" class="socialmedia_link">
        <img src="@instagram_icon.Url" height="30" width="30"/>
        </a>
        </li>
    </ul>
</div>
