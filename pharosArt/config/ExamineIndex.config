<?xml version="1.0"?>
<!-- 
Umbraco examine is an extensible indexer and search engine.
This configuration file can be extended to create your own index sets.
Index/Search providers can be defined in the UmbracoSettings.config

More information and documentation can be found on GitHub: https://github.com/Shazwazza/Examine/
-->
<ExamineLuceneIndexSets>
  <!-- The internal index set used by Umbraco back-office - DO NOT REMOVE -->
  <IndexSet SetName="InternalIndexSet" IndexPath="~/App_Data/TEMP/ExamineIndexes/Internal/"/>

  <!-- The internal index set used by Umbraco back-office for indexing members - DO NOT REMOVE -->
  <IndexSet SetName="InternalMemberIndexSet" IndexPath="~/App_Data/TEMP/ExamineIndexes/InternalMember/">
    <IndexAttributeFields>
      <add Name="id" />
      <add Name="nodeName"/>
      <add Name="updateDate" />
      <add Name="writerName" />
      <add Name="loginName" />
      <add Name="email" />
      <add Name="nodeTypeAlias" />
    </IndexAttributeFields>
  </IndexSet>
    
  <!-- Default Indexset for external searches, this indexes all fields on all types of nodes-->
  <IndexSet SetName="ExternalIndexSet" IndexPath="~/App_Data/TEMP/ExamineIndexes/External/" />

  <IndexSet SetName="MediaIndexSet" IndexPath="~/App_Data/TEMP/ExamineIndexes/MediaIndexSet/">
    <IndexAttributeFields>
      <add Name="id" />
      <add Name="nodeName"/>
      <add Name="updateDate" />
      <add Name="writerName" />
      <add Name="loginName" />
      <add Name="email" />
      <add Name="nodeTypeAlias" />
      <add Name="parentID" />
    </IndexAttributeFields>
    <IndexUserFields>
      <add Name="title"/>
      <add Name="umbracoExtension"/>
      <add Name="category"/>
      <add Name="shortDescription"/>
    </IndexUserFields>
    <IncludeNodeTypes>
      <add Name="Image"/>
      <add Name="videoFile"/>
      <add Name="File"/>
    </IncludeNodeTypes>
  </IndexSet>
  
  <IndexSet SetName="BlogIndexSet" IndexPath="~/App_Data/TEMP/ExamineIndexes/BlogIndexSet/">
    <IndexAttributeFields>
      <add Name="id" />
      <add Name="nodeName"/>
      <add Name="updateDate" />
      <add Name="writerName" />
      <add Name="loginName" />
      <add Name="email" />
      <add Name="nodeTypeAlias" />
      <add Name="parentID" />
    </IndexAttributeFields>
    <IndexUserFields>
      <add Name="title"/>
      <add Name="postTitle"/>
      <add Name="gridContent"/>
      <add Name="mainParagraph"/>
    </IndexUserFields>
    <IncludeNodeTypes>
      <add Name="blogPost"/>
    </IncludeNodeTypes>
  </IndexSet>
  
<IndexSet SetName="EventIndexSet" IndexPath="~/App_Data/TEMP/ExamineIndexes/EventIndexSet/">
    <IndexAttributeFields>
      <add Name="id" />
      <add Name="nodeName"/>
      <add Name="updateDate" />
      <add Name="writerName" />
      <add Name="loginName" />
      <add Name="email" />
      <add Name="nodeTypeAlias" />
      <add Name="parentID" />
    </IndexAttributeFields>
    <IndexUserFields>
      <add Name="title"/>
      <add Name="gridContent"/>
      <add Name="eventName"/>
    </IndexUserFields>
    <IncludeNodeTypes>
      <add Name="eventPage"/>
    </IncludeNodeTypes>
  </IndexSet>
  
</ExamineLuceneIndexSets>