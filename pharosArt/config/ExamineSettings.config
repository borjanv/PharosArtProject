<?xml version="1.0"?>
<!-- 
Umbraco examine is an extensible indexer and search engine.
This configuration file can be extended to add your own search/index providers.
Index sets can be defined in the ExamineIndex.config if you're using the standard provider model.

More information and documentation can be found on GitHub: https://github.com/Shazwazza/Examine/
-->
<Examine>
  <ExamineIndexProviders>
    <providers>
      <add name="InternalIndexer" type="UmbracoExamine.UmbracoContentIndexer, UmbracoExamine"
           supportUnpublished="true"
           supportProtected="true"
           analyzer="Lucene.Net.Analysis.WhitespaceAnalyzer, Lucene.Net"/>

      <add name="InternalMemberIndexer" type="UmbracoExamine.UmbracoMemberIndexer, UmbracoExamine"
           supportUnpublished="true"
           supportProtected="true"
           analyzer="Lucene.Net.Analysis.Standard.StandardAnalyzer, Lucene.Net"/>

        <!-- default external indexer, which excludes protected and unpublished pages-->
        <add name="ExternalIndexer" type="UmbracoExamine.UmbracoContentIndexer, UmbracoExamine"/>

      <add name="MediaIndexer" type="UmbracoExamine.UmbracoContentIndexer, UmbracoExamine"
                  supportUnpublished="false"
                  supportProtected="true"
                  interval="10"
                  analyzer="Lucene.Net.Analysis.Standard.StandardAnalyzer, Lucene.Net"
                  indexSet="MediaIndexSet"/>

      <add name="BlogIndexer" type="UmbracoExamine.UmbracoContentIndexer, UmbracoExamine"
                  supportUnpublished="false"
                  supportProtected="true"
                  interval="10"
                  analyzer="Lucene.Net.Analysis.Standard.StandardAnalyzer, Lucene.Net"
                  indexSet="BlogIndexSet"/>

      <add name="EventIndexer" type="UmbracoExamine.UmbracoContentIndexer, UmbracoExamine"
                  supportUnpublished="false"
                  supportProtected="true"
                  interval="10"
                  analyzer="Lucene.Net.Analysis.Standard.StandardAnalyzer, Lucene.Net"
                  indexSet="EventIndexSet"/>
    </providers>
  </ExamineIndexProviders>

  <ExamineSearchProviders defaultProvider="ExternalSearcher">
    <providers>
      <add name="InternalSearcher" type="UmbracoExamine.UmbracoExamineSearcher, UmbracoExamine"
           analyzer="Lucene.Net.Analysis.WhitespaceAnalyzer, Lucene.Net"/>
        
      <add name="ExternalSearcher" type="UmbracoExamine.UmbracoExamineSearcher, UmbracoExamine" />
      
      <add name="InternalMemberSearcher" type="UmbracoExamine.UmbracoExamineSearcher, UmbracoExamine"
           analyzer="Lucene.Net.Analysis.Standard.StandardAnalyzer, Lucene.Net" enableLeadingWildcard="true"/>

      <add name="MediaSearcher" type="UmbracoExamine.UmbracoExamineSearcher, UmbracoExamine"
       analyzer="Lucene.Net.Analysis.Standard.StandardAnalyzer, Lucene.Net" indexSet="MediaIndexSet" enableLeadingWildcards="true"/>

      <add name="BlogSearcher" type="UmbracoExamine.UmbracoExamineSearcher, UmbracoExamine"
      analyzer="Lucene.Net.Analysis.Standard.StandardAnalyzer, Lucene.Net" indexSet="BlogIndexSet" enableLeadingWildcards="true"/>

      <add name="EventSearcher" type="UmbracoExamine.UmbracoExamineSearcher, UmbracoExamine"
      analyzer="Lucene.Net.Analysis.Standard.StandardAnalyzer, Lucene.Net" indexSet="EventIndexSet" enableLeadingWildcards="true"/>
    </providers>
  </ExamineSearchProviders>

</Examine>
